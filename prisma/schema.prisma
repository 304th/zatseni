generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// NextAuth models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String     @id @default(cuid())
  name          String?
  email         String?    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  phone         String?    @unique  // for phone auth
  phoneVerified DateTime?           // when phone was verified
  telegramId    String?    @unique  // for Telegram auth
  role          String     @default("user") // user, support, admin
  plan          String     @default("free") // free, start, business, network
  planPrice     Int?       // locked price at signup (kopecks), null = current price
  planStartedAt DateTime?  // when current plan started
  accounts      Account[]
  sessions      Session[]
  businesses    Business[]         // businesses owned by user
  memberships   BusinessMember[]   // businesses user has access to
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  email     String
  token     String   @unique
  expires   DateTime
  createdAt DateTime @default(now())

  @@index([email])
}

// Business models
model Business {
  id          String    @id @default(cuid())
  name        String
  slug        String    @unique
  phone       String?
  address     String?
  yandexUrl   String?   // Yandex Maps URL
  gisUrl      String?   // 2GIS URL
  logo        String?
  images      String?   // JSON array of image URLs from Yandex Maps
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  requests    ReviewRequest[]
  externalReviews ExternalReview[]
  members     BusinessMember[]
  invites     Invite[]
  apiKeys     ApiKey[]
  plan        String    @default("start") // start, business, network
  smsLimit    Int       @default(100)
  smsUsed     Int       @default(0)    // resets monthly
  smsPurchased Int      @default(0)    // never expires, from purchased packs
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

// Team members with roles
model BusinessMember {
  id          String   @id @default(cuid())
  businessId  String
  business    Business @relation(fields: [businessId], references: [id], onDelete: Cascade)
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  role        String   @default("manager") // owner, manager
  createdAt   DateTime @default(now())

  @@unique([businessId, userId])
}

// Pending invitations
model Invite {
  id          String   @id @default(cuid())
  businessId  String
  business    Business @relation(fields: [businessId], references: [id], onDelete: Cascade)
  email       String
  role        String   @default("manager")
  token       String   @unique
  expiresAt   DateTime
  createdAt   DateTime @default(now())

  @@unique([businessId, email])
}

model ReviewRequest {
  id          String   @id @default(cuid())
  businessId  String
  business    Business @relation(fields: [businessId], references: [id], onDelete: Cascade)
  phone       String
  status      String   @default("sent") // sent, opened, reviewed, feedback
  rating      Int?     // 1-5 if reviewed
  feedback    String?  // Private feedback text
  source      String?  // webhook source: bitrix24, amocrm, yclients, iiko, poster, api
  sentAt      DateTime @default(now())
  openedAt    DateTime?
  reviewedAt  DateTime?
  // External review tracking
  clickedYandexAt DateTime?  // when user clicked Yandex link
  clickedGisAt    DateTime?  // when user clicked 2GIS link
  externalReviewId String?   // matched external review
  externalReview   ExternalReview? @relation(fields: [externalReviewId], references: [id])
}

// Scraped reviews from external platforms
model ExternalReview {
  id          String   @id @default(cuid())
  businessId  String
  business    Business @relation(fields: [businessId], references: [id], onDelete: Cascade)
  platform    String   // yandex, gis
  externalId  String   // ID from platform to avoid duplicates
  rating      Int      // 1-5
  text        String?  // review text
  authorName  String?
  publishedAt DateTime // when review was posted on platform
  scrapedAt   DateTime @default(now())
  matchedRequest ReviewRequest[]

  @@unique([platform, externalId])
  @@index([businessId, platform])
}

// API keys for webhook integrations
model ApiKey {
  id          String   @id @default(cuid())
  businessId  String
  business    Business @relation(fields: [businessId], references: [id], onDelete: Cascade)
  name        String   // e.g. "iiko integration"
  key         String   @unique
  lastUsedAt  DateTime?
  createdAt   DateTime @default(now())

  @@index([key])
}

// Payment records
model Payment {
  id            String   @id @default(cuid())
  userId        String
  amount        Int      // in kopecks
  currency      String   @default("RUB")
  status        String   @default("pending") // pending, succeeded, canceled
  type          String   // subscription, sms_pack
  planId        String?  // if subscription
  smsAmount     Int?     // if sms_pack
  yookassaId    String?  @unique // YooKassa payment ID
  description   String?
  createdAt     DateTime @default(now())
  paidAt        DateTime?

  @@index([userId])
  @@index([yookassaId])
}

// Phone OTP for SMS authentication
model PhoneOTP {
  id        String   @id @default(cuid())
  phone     String
  code      String   // 4-digit code
  expires   DateTime
  createdAt DateTime @default(now())

  @@index([phone])
}

